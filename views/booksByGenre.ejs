<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= genre %></title>
  </head>
  <body>
    <h1><%= genre %> Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Publish Year</th>
          <th>Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(function(book) { %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.publish_year %></td>
          <td><%= book.count %></td>
          <td>
            <a href="/update/<%= book.id %>"><button>Edit</button></a>
            <form action="/delete" method="POST" style="display: inline">
              <input type="hidden" name="id" value="<%= book.id %>" />
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/create?genre=<%= genre %>"><button>Add Book</button></a>
    <a href="/">Back to Genres</a>
  </body>
</html>
